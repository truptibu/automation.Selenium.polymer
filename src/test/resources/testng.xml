<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Polymer Shop Test Suite" parallel="none" thread-count="1">

    <!-- Chrome Suite -->
    <test name="Chrome Tests" preserve-order="true">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.ps.automation.tests.HomePageTests"/>
            <class name="com.ps.automation.tests.ProductTests"/>
            <class name="com.ps.automation.tests.ProductDetailTests"/>
            <class name="com.ps.automation.tests.CartTests"/>
            <class name="com.ps.automation.tests.CheckoutTests"/>
        </classes>
    </test>

    <!-- Firefox Suite -->
    <test name="Firefox Tests" preserve-order="true">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.ps.automation.tests.HomePageTests"/>
            <class name="com.ps.automation.tests.ProductTests"/>
            <class name="com.ps.automation.tests.ProductDetailTests"/>
            <class name="com.ps.automation.tests.CartTests"/>
            <class name="com.ps.automation.tests.CheckoutTests"/>
        </classes>
    </test>

</suite>


